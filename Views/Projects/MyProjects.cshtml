@model IEnumerable<BugHunterBugTrackerZD.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}

<h1>My Projects</h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
    {
    <a asp-action="Create">Create New Project</a>     
    }
</p>

<div class="row">
    <div class="col-lg-12">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title"></h2>
            </header>
            <div class="card-body">
                <table class="table table-responsive-md table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </th>

                           
                            <th>
                                @Html.DisplayNameFor(model => model.Company)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProjectPriority)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Members)
                            </th>
                            <th>
                                Actions
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (!item.Archived == true)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>

                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company!.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProjectPriority!.Name)
                                    </td>
                                    <td>
                                        <ul class="list-unstyled">
                                            @foreach (var member in item.Members)
                                            {
                                                <li class="">
                                                    @member.FullName
                                                </li>
                                            }
                                        </ul>
                                    </td>
                                    <td colspan="2" class="actions-hover actions-fade">
                                        <a asp-action="Edit" asp-route-id="@item.Id"> <i class="fas fa-pencil-alt"></i> </a>
                                        <a asp-action="Details" asp-route-id="@item.Id"> <i class='bx bx-detail'></i> </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-row"> <i class="far fa-trash-alt"></i> </a>
                                    </td>

                                </tr>
                            }
                            
                        }

                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>


