@model IEnumerable<BugHunterBugTrackerZD.Models.Invite>

@{
    ViewData["Title"] = "Index";
}



@*<p>
    <a asp-action="Create">Create New</a>
</p>
*@
<div class="row">
    <div class="col-lg-12">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                </div>

                <h2 class="card-title">Notifications</h2>
            </header>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-responsive-md table-hover mb-0" id="datatable-default">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Project)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteeFullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteeEmail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InviteDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Invitor)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="projectsIndexTable">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Project!.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteeFullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteeEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InviteDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Invitor!.FullName)
                                    </td>                                    
                                    <td class="actions-hover actions-fade text-center">
                                       @* <a asp-action="Edit" asp-route-id="@item.Id"> <i class="fas fa-pencil-alt text-warning"></i> </a>*@
                                        <a asp-action="Details" asp-route-id="@item.Id"> <i class='bx bx-detail text-info'></i> </a>
                                        @*<a asp-action="Delete" asp-route-id="@item.Id" class="delete-row"> <i class="far fa-trash-alt text-danger"></i> </a>*@
                                    </td>                                   
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </section>
    </div>
</div>

